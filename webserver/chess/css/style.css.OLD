* {
  box-sizing: border-box;
}
body {
  margin: 0;
}
.form{
  border-radius:3px;
  padding:10px 15px;
  background-color:rgba(0,0,0,0.2);
}
.textarea{
  width:100%;
  margin-bottom:15px;
  padding:7px 10px;
  border-radius:2px;
  color:#fff;
  background-color:#554c57;
  border:none;
}
.label{
  width:100%;
  display:block;
}
.button{
  width:100%;
  margin:15px 0;
  background-color:#785580;
  border:none;
  color:#fff;
  border-radius:2px;
  padding:7px 10px;
  font-size:1em;
  cursor:pointer;
}
.row{
  display:flex;
  justify-content:flex-start;
  align-items:stretch;
  flex-wrap:nowrap;
  padding:10px;
}
.cell{
  min-height:75px;
  flex-grow:1;
  flex-basis:100%;
}
.chat-container {
    width: 30%;
    height: 30%;
    overflow: auto;
}
.message-user-name{
  padding:10px;
  float:none;
  font-weight:400;
  border-radius:3px 3px 3px 3px;
}
.message-sent-date{
  padding:10px;
  font-size:12px;
  font-family:Helvetica, serif;
  float:left;
}
.message-box{
  border:#000000 #000000;
  border-radius:0 0 0 0;
  opacity:1;
  background-color:rgba(0,0,0,0);
}
@media (max-width: 768px){
  .row{
    flex-wrap:wrap;
  }
}
